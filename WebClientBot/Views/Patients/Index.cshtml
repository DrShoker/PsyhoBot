@Html.ActionLink("Search Patient", "Search", "Patients")
<br />
<table cellpadding="2" cellspacing="2" border="2">
    <tr>
        <th>ID</th>
        <th>FullName</th>
        <th>Birthday</th>
        <th>Diagnosis</th>
        <th>Sex</th>
        <th>DiseasePeriod</th>
        <th>NormalCondition</th>
        <th>Characteristic</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var p in ViewBag.result)
    {
        <tr>
            <th>@p.Id</th>
            <th>@p.FullName</th>
            <th>@p.Birthday</th>
            <th>@p.Diagnosis</th>
            <th>@p.Sex</th>
            <th>@p.DiseasePeriod</th>
            <th>@p.NormalCondition</th>
            <th>@p.Characteristic</th>
            <th>
                @using (@Html.BeginForm("Delete", "Patients", FormMethod.Post))
                {
                    <input type="hidden" name="id" value="@p.Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                }
            </th>
            <th>
                @using (Html.BeginForm("Edit", "Patients", FormMethod.Get))
            {
                <input type="hidden" name="id" value="@p.Id" />
                <input type="submit" value="Edit" class="btn btn-info" />
            }
        </th>
    </tr>
    }
</table>
<br />
@Html.ActionLink("AddOrEdit Patient", "AddOrEdit", "Patients" , new {@class = "btn btn-success" } )
