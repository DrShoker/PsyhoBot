<div class="form-horizontal">
    <div class="col-sm-6 col-lg-offset-3">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.FullName, new { @class = "col-md-2 col-md-offset-2 control-label" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.FullName)
                </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Birthday, new { @class = "col-md-2 col-md-offset-2 control-label" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Birthday, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                    @Html.ValidationMessageFor(model => model.Birthday)
                </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Sex, new { @class = "col-md-2 col-md-offset-2 control-label" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Sex, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                    @Html.ValidationMessageFor(model => model.Sex)
                </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Category, new { @class = "col-md-2 col-md-offset-2 control-label" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                    @Html.ValidationMessageFor(model => model.Category)
                </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Charasteristic, new { @class = "col-md-2 col-md-offset-2 control-label" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Charasteristic, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                    @Html.ValidationMessageFor(model => model.Charasteristic)
                </div>

            <div class="form-group">
                <center><input type="submit" value="Submit" class="btn btn-info" />
                <input type="reset" value="Reset" class="btn btn-warning" /></center>
            </div>
        }
    </div>
</div>
