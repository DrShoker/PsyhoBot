<center>@Html.ActionLink("Add Answer", "Add", "Answers", new { @class = "btn btn-success btn-lg" })</center>
<br />
<table class="table table-hover">
    <tr>
        <th class="active">ID</th>
        <th class="active">Body</th>
        <th class="active"></th>
        <th class="active"></th>
    </tr>
    @foreach (var anw in ViewBag.result)
    {
        <tr>
            <th>@anw.Id</th>
            <th>@anw.Body</th>
            <th>
                @using (@Html.BeginForm("Delete", "Answers", FormMethod.Post))
                {
                    <input type="hidden" name="id" value="@anw.Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                }
            </th>
            <th>
                @using (Html.BeginForm("Edit", "Answers", FormMethod.Get))
                {
                    <input type="hidden" name="id" value="@anw.Id" />
                    <input type="submit" value="Edit" class="btn btn-info" />
                }
            </th>
        </tr>
    }
</table>
