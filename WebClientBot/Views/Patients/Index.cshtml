<center>@Html.ActionLink("Add Patient", "AddOrEdit", "Patients", new { @class = "btn btn-success btn-lg" })</center>
@Html.ActionLink("Search Patient", "Search", "Patients")
<br />
<table class="table table-hover">
    <tr>
        <th class="active">ID</th>
        <th class="active">FullName</th>
        <th class="active">Birthday</th>
        <th class="active">Diagnosis</th>
        <th class="active">Sex</th>
        <th class="active">DiseasePeriod</th>
        <th class="active">NormalCondition</th>
        <th class="active">Characteristic</th>
        <th class="active"></th>
        <th class="active"></th>
    </tr>
    @foreach (var p in ViewBag.result)
    {
        <tr>
            <th>@p.Id</th>
            <th>@p.FullName</th>
            <th>@p.Birthday</th>
            <th>@p.Diagnosis</th>
            <th>@p.Sex</th>
            <th>@p.DiseasePeriod</th>
            <th>@p.NormalCondition</th>
            <th>@p.Characteristic</th>
            <th>
                @using (@Html.BeginForm("Delete", "Patients", FormMethod.Post))
                {
                    <input type="hidden" name="id" value="@p.Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                }
            </th>
            <th>
                @using (Html.BeginForm("Edit", "Patients", FormMethod.Get))
                {
                    <input type="hidden" name="id" value="@p.Id" />
                    <input type="submit" value="Edit" class="btn btn-info" />
                }
            </th>
        </tr>
    }
</table>
